<%= form_for(@post) do |f| %>
  <ul>
  <% @post.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <div class="form-group">
    <%= f.text_field :title, placeholder: "Title of the post" %>
  </div>
  <div class="form-group">
    <%= f.text_field :body, placeholder: "Body of the post" %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
<%= link_to 'Back', :back %>